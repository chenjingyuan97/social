.social-page {
  display: flex;
  flex-direction: column;
  height: 100vh;
  justify-content: space-between;
  height: 100vh;
}
.social-page .top-warpper {
  position: fixed;
  display: flex;
  justify-content: space-between;
  top: 0;
  width: 100%;
  background-color: #fff;
  z-index: 99;
  align-items: center;
}
.social-page .top-warpper .top-head {
  display: flex;
  align-items: center;
  padding: 30rpx;
}
.social-page .top-warpper .top-head .top-item {
  margin-right: 30rpx;
}
.social-page .content-warpper {
  padding-top: 74rpx;
  padding-bottom: 100rpx;
}
.social-page .content-warpper .content-item {
  height: 200rpx;
  margin: 30rpx;
  border: 1px solid #eaecef;
  border-radius: 8rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding: 20rpx;
}
.social-page .content-warpper .content-item .line-1 {
  font-size: 36rpx;
  font-weight: bold;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.social-page .content-warpper .content-item .line-2 {
  margin: 14rpx 0;
  font-size: 26rpx;
  letter-spacing: 1px;
}
.social-page .content-warpper .content-item .line-3 {
  display: flex;
  justify-content: space-between;
  font-size: 26rpx;
}
.social-page .content-warpper .content-item .line-3 .line-3-r {
  display: flex;
  align-items: center;
}
.social-page .content-warpper .content-item .line-3 .line-3-r .avatar-warpper {
  display: flex;
}
.social-page .content-warpper .content-item .line-3 .line-3-r .avatar-warpper .avatar-item {
  width: 20px;
  height: 20px;
  border-radius: 4rpx;
  margin-left: 20rpx;
}
.social-page .bottom-warpper {
  position: fixed;
  bottom: 0;
  background-color: #fff;
  z-index: 99;
  width: 100%;
}
.social-page .bottom-warpper .bottom {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx;
}